<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/skip_to_others_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/default_round_head"
                android:translationZ="10dp" />
            <TextView
                android:id="@+id/tv_status_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘一林(老师)"
                android:textSize="16sp"
                android:textColor="@color/midGray" />
            <TextView
                android:id="@+id/tv_status_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/midGray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表了文章"
                android:textSize="16sp"
                android:textColor="@color/midGray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/skip_to_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="上大学就要上西电啊"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_status_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="西电这所学校啊，它好就好在它十分优秀。比如它的食堂和宿舍，毫不夸张地说，世界上还没有哪个学校能如此之优秀！"
                android:textColor="@color/midGray"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞同"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_status_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15k"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

